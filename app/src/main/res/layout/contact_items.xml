<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_contact_image"
        android:layout_width="@dimen/settings_btn_photo_change_height"
        android:layout_height="@dimen/settings_btn_photo_change_height"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_contact_name"
        style="@style/normal_text"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintStart_toEndOf="@+id/img_contact_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ADNAN MENDERES" />

    <TextView
        android:id="@+id/tv_contact_state"
        style="@style/small_text"
        app:layout_constraintStart_toEndOf="@+id/img_contact_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact_name"
        tools:text="online" />
</androidx.constraintlayout.widget.ConstraintLayout>