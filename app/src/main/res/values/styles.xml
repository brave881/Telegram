<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_btn_container">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="small_text">
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="separator">
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
    </style>
</resources>